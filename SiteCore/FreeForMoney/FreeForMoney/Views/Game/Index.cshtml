@model IEnumerable<FreeForMoney.Models.Game>

@{
    ViewBag.Title = "Games Store";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Games Store</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}
<table class="table">
    <table class="table">
        <tr>
            <th>
                Company name
            </th>
            <th>
                Photo
            </th>
            <th>
                @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm })
            </th>
            <th>
                @Html.ActionLink("ReleaseDate", "Index", new { sortOrder = ViewBag.DateSortParm })
            </th>
            <th>
                Description
            </th>
            <th>
                @Html.ActionLink("Genre", "Index", new { sortOrder = ViewBag.GenreSortParm })
            </th>
            <th>
                @Html.ActionLink("Price", "Index", new { sortOrder = ViewBag.PriceSortParm })
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            string imageAdress = item.Id + ".jpg";
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Company.Name)
                </td>
                <td>
                    <a href="#" class="image featured"><img style="width : 100px; height : 100px" src="~/images/GamePhotos/@imageAdress" alt="Game Photo @item.Id" /></a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.ActionLink("UploadImage", "UploadImage", new { id = item.Id }) |
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
